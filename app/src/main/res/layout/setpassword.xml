<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Speak To Your Diary"
        android:textColor="@color/colorPrimary"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Previous Password"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18dp"
        android:id="@+id/tx1"
        android:layout_marginTop="30dp"
        android:textStyle="bold">



    </TextView>



    <EditText
        android:id="@+id/previous_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberPassword"
        android:layout_below="@+id/tx1"
        android:layout_gravity="center"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Password"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18dp"
        android:id="@+id/tx2"
        android:layout_below="@+id/previous_pass"
        android:textStyle="bold">

    </TextView>


    <EditText
        android:id="@+id/new_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberPassword"
        android:layout_below="@+id/tx2"

        android:layout_gravity="center"

        />

    <Button
        android:id="@+id/set_new_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_below="@+id/new_pass"

        android:text="Ok"
        />

</LinearLayout>